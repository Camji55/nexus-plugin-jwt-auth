{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "lib": [
      "esnext"
    ],
    "strict": true,
    "rootDir": "api",
    "plugins": [
      { "name": "nexus/typescript-language-service" }
    ],
    "typeRoots": [
      "node_modules/@types","types"
    ],
    "noEmit": true,
    "esModuleInterop": true
  },
  "include": [
    "api",
    "types.d.ts"
  ]
}